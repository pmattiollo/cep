<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="CEPDS" transaction-type="RESOURCE_LOCAL">
		
		<non-jta-data-source>java:jboss/datasources/CEPDS</non-jta-data-source>
		
		<class>br.com.furb.pmattiollo.tcc.domain.CalculationEntity</class>
		<class>br.com.furb.pmattiollo.tcc.domain.CollectEntity</class>
		<class>br.com.furb.pmattiollo.tcc.domain.ItemEntity</class>
		<class>br.com.furb.pmattiollo.tcc.domain.SampleEntity</class>
		<class>br.com.furb.pmattiollo.tcc.domain.SoftwareEntity</class>
		<class>br.com.furb.pmattiollo.tcc.domain.UnitEntity</class>	
		<class>br.com.furb.pmattiollo.tcc.domain.UserEntity</class>

		<class>br.com.furb.pmattiollo.tcc.domain.Item</class>
<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />	        
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="false" />
			<property name="hibernate.hbm2ddl.auto" value="update" />	
		</properties>
	</persistence-unit>
	

</persistence>